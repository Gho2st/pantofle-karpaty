generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  name        String?
  email       String    @unique
  image       String?
  role        String    @default("USER")
  gender      String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  cart        Cart[]    @relation("UserCart")
  orders      Order[]   @relation("UserOrders")
  addresses   Address[] @relation("UserAddresses")
}

model Address {
  id          Int       @id @default(autoincrement())
  userId      Int
  street      String
  city        String
  postalCode  String
  phone       String
  paczkomat   String?
  user        User      @relation("UserAddresses", fields: [userId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  isPrimary   Boolean   @default(false) // New field for primary address
}

model Category {
  id            Int        @id @default(autoincrement())
  name          String
  description   String?
  parentId      Int?
  slug          String
  image         String?
  parent        Category?  @relation("Subcategories", fields: [parentId], references: [id])
  subcategories Category[] @relation("Subcategories")
  products      Product[]
  deletedAt     DateTime?
  @@unique([slug, deletedAt])
}

model Product {
  id              Int       @id @default(autoincrement())
  name            String
  slug            String
  price           Float
  description     String?
  description2    String?
  additionalInfo  String?
  sizes           Json?
  images          Json?
  categoryId      Int
  cart            Cart[]    @relation("ProductCart")
  orderItems      OrderItem[] @relation("ProductOrderItems")
  category        Category  @relation(fields: [categoryId], references: [id])
  deletedAt       DateTime?
  lowestPrice     Float?
  promoPrice      Float?   // cena promocyjna
  promoStartDate  DateTime? 
  promoEndDate    DateTime? 
  @@unique([slug, deletedAt])  // KLUCZ: unikalny TYLKO wśród aktywnych!
}

model Cart {
  id          Int       @id @default(autoincrement())
  userId      Int
  productId   Int
  size        String
  quantity    Int
  createdAt   DateTime  @default(now())
  product     Product   @relation("ProductCart", fields: [productId], references: [id])
  user        User      @relation("UserCart", fields: [userId], references: [id])
}
enum OrderStatus {
  PENDING   // Oczekuje na płatność
  PAID      // Opłacone
  SHIPPED   // Wysłane
  CANCELLED // Anulowane
  EXPIRED   // Wygasłe
}

model Order {
  id          Int       @id @default(autoincrement())
  userId      Int?      // Opcjonalne dla zamówień gości
  email       String
  firstName   String
  lastName    String
  street      String
  city        String
  postalCode  String
  phone       String
  paczkomat   String?   // Opcjonalny kod paczkomatu
  totalAmount Float
  discountCode   String?
  discountAmount Float       @default(0)
  isGuest     Boolean   @default(false)
  items       OrderItem[] @relation("OrderItems")
  user        User?     @relation("UserOrders", fields: [userId], references: [id])
  deliveryMethod String // np. "paczkomat" lub "kurier"
  paymentMethod  String // np. "stripe" lub "transfer"
  deliveryCost   Float  // Koszt samej dostawy
  createdAt   DateTime  @default(now())
  status      OrderStatus @default(PENDING) // Domyślnie każde zamówienie jest oczekujące
  paymentId   String?     @unique // Tutaj zapiszemy ID transakcji zwrócone przez Przelewy24 (ich 'orderId')
  companyName String?
  nip String?
}

model OrderItem {
  id         Int     @id @default(autoincrement())
  orderId    Int
  productId  Int
  name      String // Nazwa produktu w momencie zakupu
  size       String
  quantity   Int
  price      Float // <--- Cena w momencie zakupu
  order      Order   @relation("OrderItems", fields: [orderId], references: [id])
  product    Product @relation("ProductOrderItems", fields: [productId], references: [id])
}

model DiscountCode {
  id            Int       @id @default(autoincrement())
  code          String    @unique
  type          String    // "percentage" lub "fixed"
  value         Float     // 10.00 dla 10 PLN, 15.00 dla 15%
  minOrderValue Float?    // minimalna wartość zamówienia
  maxUses       Int?      // maksymalna liczba użyć
  usedCount     Int       @default(0)
  validFrom     DateTime?
  validTo       DateTime?
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
}