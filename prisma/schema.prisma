generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int              @id @default(autoincrement())
  name            String?
  email           String           @unique
  image           String?
  role            String           @default("USER")
  gender          String?
  billingAddress  BillingAddress?
  shippingAddress ShippingAddress[]
  orders          Order[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

model BillingAddress {
  id        Int     @id @default(autoincrement())
  userId    Int     @unique
  user      User    @relation(fields: [userId], references: [id])
  firstName String
  lastName  String
  street    String
  city      String
  zipCode   String
  country   String
}

model ShippingAddress {
  id        Int     @id @default(autoincrement())
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
  label     String?
  firstName String
  lastName  String
  street    String
  city      String
  zipCode   String
  country   String
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
}

model Order {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  totalAmount Float
  status      String   @default("PENDING")
}